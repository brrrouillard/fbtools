{

  "manifest_version": 2,
  "name": "Facebook Tools",
  "version": "1.0",

  "description": "A simple and handy set of tools for Facebook.com",
  "homepage_url": "https://github.com/brrrouillard/fbtools",
  "icons": {
    "48": "icons/icon-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["darktheme.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Facebook Tools",
    "default_popup": "popup/ui.html"
  },

  "web_accessible_resources": [
    
  ]

}